# Environment Configuration
#
# Copy this file to .env and fill in your credentials.
# DO NOT commit .env to version control.

# ============================================================================
# VERKADA API AUTHENTICATION
# ============================================================================

# API Key
VERKADA_API_KEY=your_api_key_here

# ============================================================================
# API SETTINGS
# ============================================================================

# API Region
# Options: api (US), api.eu (Europe), api.au (Australia)
VERKADA_REGION=your_region_here

# Request timeout in milliseconds (default: 30000)
# VERKADA_TIMEOUT=30000

# Maximum retry attempts for failed requests (default: 3)
# VERKADA_MAX_RETRIES=3

# Delay between retries in milliseconds (default: 1000)
# VERKADA_RETRY_DELAY=1000

# ============================================================================
# SERVER SETTINGS
# ============================================================================

# Server name for identification (default: verkada-mcp-server)
# SERVER_NAME=verkada-mcp-server

# Server version (default: 0.1.0)
# SERVER_VERSION=0.1.0

# ============================================================================
# LOGGING & DEBUGGING
# ============================================================================

# Logging Level
# Options: debug, info, warn, error
LOG_LEVEL=info

# Enable debug mode (true/false or 1/0)
# DEBUG=false
